<h1> change my password</h1>
<%= form_for @user, :url => password_reset_path, :method => :put do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited passwords being saved: </h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
   <% end %>     
  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, :value => (params[:user]) ? params[:user][:password] : "" %>
  </div>  
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, :value => (params[:user]) ? params[:user][:password_confirmation] : "" %>
  </div>
  <div class="actions">
    'Update my password and log me in' 
    <%= f.submit %> 
   </div> 
   <% end %>