<h1> forgot password </h1>

fill out the form below and instructions to reset your password will be emailed to you:<br />

<%= form_for @user, :url => password_resets_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2> <%= pluralize(@user.errors.count, "error") %> prohibited passwords being sent:" </h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

     
<div class="field" >
    <%= f.label :email %>
    <%= f.text_field :email, :name => "email", :value => params[:email] %>
</div>
<div class="action">  
  <%= f.submit 'Reset my password' %>
</div>  
<% end %>